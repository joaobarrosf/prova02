#include<stdio.h>
void main() {
int dia, mes, ano, bissexto;
int diasvividos;
printf("informe o ano que voce nasceu:\n");
scanf("%d", &ano);
printf("é ano bissexto?sim(1) ou não(2)\n");
scanf("%d", &bissexto);
printf("informe o mes que voce nasceu:\n");
scanf("%d", &mes);
printf("informe o dia que voce nasceu:\n");
scanf("%d", &dia);
if ( bissexto == 1){
diasvividos=(2019-ano)365+mes30+dia+1;
printf("voce já viveu %d dias", diasvividos);
}
else {
diasvividos=(2019-ano)365+mes30+dia;
printf("voce já viveu %d dias", diasvividos);
}
}

