#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

int main()
{
int tabuada = 0;
printf("\nDigite a tabuada que você deseja \n\t\t\t\n>>> ");
scanf("%i", &tabuada);

for(int x = 1; x<=10; ++x){
    //1 x 5 = 5
    printf("%ix%i = %i\n", x, tabuada, x * tabuada);
}

return 0;
}
//
#include <stdio.h>
#include <string.h>

int main() {
char string1[50], string2[50];
int i, j = 0;
gets(string1);
for(i = (strlen(string1) - 1); i >= 0; i--) {
string2[j] = string1[i];
j++;
}
string2[j] = 0;
printf("String invertida: %s\n", string2);
return 0;
}

