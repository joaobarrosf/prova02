#include<stdio.h>
void main(){
int x, y;
printf("digite coordenadas X:\n");
scanf("%d", &x);
printf("digite coordenadas Y:\n");
scanf("%d", &y);

if (x>0 && y>0){
printf("suas coordenadas %d e %d estão no primeiro quadrante", x, y);
}
if(x<0 && y>0){
printf("suas coordenadas %d e %d estão no segundo quadrante", x, y);
}
if(x<0 && y<0){
printf("suas coordenadas %d e %d estão no terceiro quadrante", x, y);
}
if(x>0 && y<0){
printf("suas coordenadas %d e %d estão no quarto quadrante", x, y);
}

}

